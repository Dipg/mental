/*  Eliminar bloque de referencias*/

.references{
    opacity:0;
    }
    .references:hover{
    opacity:1;
    }
  
.cards{
    text-align:center;
    display: table;
      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
      transition: 0.3s;
      width: 100%;
      border-radius: 20px;
     background-color: rgba(0, 0, 0, 0.5);
      padding: 10px ;
      height: 10px; 
      margin-top:15px;
      margin-bottom: 15px;
    }
.cards:hover {
      box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}


